@model IEnumerable<WebApplication2.DONDATHANG>

<h2>Danh sách đơn hàng</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Ngày đặt</th>
            <th>Ngày giao</th>
            <th>Tình trạng thanh toán</th>
            <th>Tình trạng giao hàng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDonHang</td>
                <td>@item.Ngaydat</td>
                <td>@item.Ngaygiao</td>
<td>@(item.Dathanhtoan.GetValueOrDefault() ? "Đã thanh toán" : "Chưa thanh toán")</td>
<td>@(item.Tinhtranggiaohang.GetValueOrDefault() ? "Đã giao" : "Chưa giao")</td>

            </tr>
        }
    </tbody>
</table>
