    <title>Navigation with Login/Register</title>
    <style>
        /* Tổng quát cho header */
        header {
            background-color: #333; /* Màu nền */
            padding: 10px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Navbar container */
        .navbar .container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Menu điều hướng */
        .nav {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

            .nav li {
                margin: 0 15px;
            }

            .nav a {
                text-decoration: none;
                color: white;
                font-size: 16px;
                font-weight: bold;
                padding: 10px 15px;
                transition: background-color 0.3s, color 0.3s;
            }

                .nav a:hover {
                    background-color: #007bff; /* Màu nền khi hover */
                    color: white;
                    border-radius: 5px;
                }

            /* Thẻ active */
            .nav .active a {
                color: #007bff; /* Màu nhấn của active */
            }

            /* Đăng nhập và Đăng ký */
            .nav li:last-child a {
                background-color: #007bff;
                color: white;
                padding: 8px 15px;
                border-radius: 5px;
            }

                .nav li:last-child a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <ul class="nav">
                    <li class="scroll active"><<a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="scroll"><a href="#service">Service</a></li>
                    <li class="scroll"><a href="#featured-cars">Featured Cars</a></li>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["UserID"] != null)
                        {
                            <!-- Nếu người dùng đã đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Profile", "Account")">Chào, @Session["UserName"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <!-- Nếu người dùng chưa đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Account")">Đăng ký</a>
                            </li>
                        }
                    </ul>
                    <li>
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-warning">
                            Giỏ hàng (@(Session["Cart"] != null ? ((List<WebApplication2.XEGANMAY>)Session["Cart"]).Count : 0))
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
</body>
