@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Tài khoản")
        @Html.TextBox("taikhoan", null, new { @class = "form-control" })
        @Html.ValidationMessage("taikhoan", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Mật khẩu")
        @Html.Password("matkhau", null, new { @class = "form-control" })
        @Html.ValidationMessage("matkhau", "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
}

<p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a></p>
